<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCurrentUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sair" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:textSize="30sp"
            android:text="destaques do amazonas" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:textSize="30sp"
            android:text="saúde e bem estar" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:textSize="30sp"
            android:text="estilo de vida e comportamento" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:textSize="30sp"
            android:text="viagens e turismo" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:textSize="30sp"
            android:text="cultura e entretenimento" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:textSize="30sp"
            android:text="finanças e oportunidades" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:textSize="30sp"
            android:text="estatuto do idoso" />

    </LinearLayout>
</ScrollView>