<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtTitleConceptOfTheBestAgeActivity"
            android:textSize="30sp"
            android:layout_margin="@dimen/text_margin"/>

        <ImageView
            android:id="@+id/imgConceptOfTheBestAgeActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="@string/txtMainConceptOfTheBestAgeActivity"
            android:textSize="20sp"
            android:layout_margin="@dimen/text_margin"/>

        <ImageView
            android:id="@+id/imgConceptOfTheBestAgeActivity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtMainConceptOfTheBestAgeActivity1"
            android:textSize="20sp"
            android:layout_margin="@dimen/text_margin"/>

        <ImageView
            android:id="@+id/imgConceptOfTheBestAgeActivity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtMainConceptOfTheBestAgeActivity2"
            android:textSize="20sp"
            android:layout_margin="@dimen/text_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtMainConceptOfTheBestAgeActivity3"
            android:textSize="20sp"
            android:layout_margin="@dimen/text_margin"/>

        <ImageView
            android:id="@+id/imgConceptOfTheBestAgeActivity3"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="img" />

        <Button
            android:id="@+id/btnConceptOfTheBestAgeActivityWeb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="120dp"
            android:insetLeft="8dp"
            android:insetRight="8dp"
            android:textSize="30sp"
            android:text="@string/link" />

    </LinearLayout>
</ScrollView>